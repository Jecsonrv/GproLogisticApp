# ============================================
# GPRO Logistic - Environment Variables
# ============================================
# Copia este archivo a .env y ajusta los valores
# cp .env.example .env
# ============================================

# ============================================
# ENVIRONMENT
# ============================================
# development | staging | production
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# ============================================
# ALLOWED HOSTS
# ============================================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Para usar PostgreSQL, cambia DATABASE_ENGINE a 'postgresql'
DATABASE_ENGINE=sqlite
# DATABASE_ENGINE=postgresql

DB_NAME=gpro_logistic
DB_USER=postgres
DB_PASSWORD=gpro_secure_2024
DB_HOST=localhost
DB_PORT=5432

# ============================================
# REDIS
# ============================================
# Para usar Redis, cambia REDIS_ENABLED a 'True'
REDIS_ENABLED=False
REDIS_URL=redis://localhost:6379

# ============================================
# JWT CONFIGURATION
# ============================================
# Tiempo de vida de tokens en minutos/horas
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_HOURS=24

# ============================================
# EMAIL (Opcional - para notificaciones)
# ============================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
